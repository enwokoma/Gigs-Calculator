<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:drawableTop="@drawable/ic_launcher_calculator"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:text="@string/app_name" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center|bottom"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/about_main"
                android:textStyle="normal"
                android:textSize="15sp"/>

                <Button
                    android:id="@+id/action_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:drawablePadding="16dp"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    android:text="@string/rate"
                    android:textAlignment="viewStart"
                    android:visibility="visible"
                    android:onClick="action_rate"
                    android:drawableLeft="@drawable/ic_star"/>

                <Button
                    android:id="@+id/action_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:drawablePadding="16dp"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    android:text="@string/share"
                    android:textAlignment="viewStart"
                    android:visibility="visible"
                    android:onClick="action_share"
                    android:drawableLeft="@drawable/ic_share"/>

                <Button
                    android:id="@+id/action_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:drawablePadding="16dp"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    android:text="@string/feedback"
                    android:textAlignment="viewStart"
                    android:visibility="visible"
                    android:onClick="action_feedback"
                    android:drawableLeft="@drawable/ic_feedback"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/made_with_love"
                android:src="@drawable/made_with_love"
                android:paddingTop="20dp" />

                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>